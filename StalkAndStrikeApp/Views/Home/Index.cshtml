@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Wild Hunt Tracker</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Header Section -->
    <header>
        <div class="container">
            <h1>Wild Hunt Tracker</h1>
        </div>
    </header>

    <!-- Hero Banner Section -->
    <section class="hero">
        <div class="container">
            <h2>Track Your Hunts Like Never Before</h2>
            <p>Explore the wilderness, keep a detailed log of your expeditions, and join a community of hunters.</p>
            <a href="#" class="cta-button">Get Started</a>
        </div>
    </section>

    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to Stalk and Strike</h1>
        <p class="lead">Manage your hunting squads, hunters, and their trusty dogs all in one place.</p>
        <hr class="my-4" />
        <p>Get started by managing your teams below.</p>
    </div>

    <div class="text-center">
        <a asp-controller="Manage" asp-action="Index" class="btn btn-lg btn-primary">Manage Hunters, Dogs, and Squads</a>
    </div>

    <!-- Features Section -->
    <section class="features">
        <div class="container">
            <h2>App Features</h2>
            <div class="feature-cards">
                <div class="feature-card">
                    <i class="fa fa-map-marker"></i>
                    <h3>Detailed Maps</h3>
                    <p>Find the best hunting spots with our interactive, terrain-specific maps.</p>
                </div>
                <div class="feature-card">
                    <i class="fa fa-binoculars"></i>
                    <h3>Track Hunts</h3>
                    <p>Log your expeditions, track game locations, and monitor your hunting stats.</p>
                </div>
                <div class="feature-card">
                    <i class="fa fa-users"></i>
                    <h3>Join the Community</h3>
                    <p>Connect with fellow hunters, share experiences, and participate in group hunts.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials">
        <div class="container">
            <h2>What Our Users Say</h2>
            <div class="testimonial-cards">
                <div class="testimonial-card">
                    <p>"This app revolutionized the way I plan my hunting trips. The map feature is a game-changer!"</p>
                    <h4>- Hunter John</h4>
                </div>
                <div class="testimonial-card">
                    <p>"I love how easy it is to track my hunts and review my stats. It keeps me organized."</p>
                    <h4>- Sarah Woods</h4>
                </div>
                <div class="testimonial-card">
                    <p>"Great way to connect with fellow hunters. The community feature is very engaging."</p>
                    <h4>- Mike Falcon</h4>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section">
        <div class="container">
            <h2>Ready to Start Your Next Adventure?</h2>
            <p>Join thousands of hunters tracking their game and improving their skills with Wild Hunt Tracker.</p>
            <a href="#" class="cta-button">Sign Up Now</a>
        </div>
    </section>

    <!-- Footer Section -->
    <footer>
        <div class="container">
            <p>&copy; 2024 Wild Hunt Tracker. All Rights Reserved. | <a href="#">Privacy Policy</a></p>
            <p>
                Follow us on:
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-instagram"></i></a>
            </p>
        </div>
    </footer>
</body>
</html>

