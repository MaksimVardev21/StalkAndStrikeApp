@model StalkAndStrikeApp.Models.Dog

<h2>Create Dog</h2>

<form asp-action="CreateDog" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HunterId"></label>
        <select asp-for="HunterId" class="form-control" asp-items="ViewBag.Hunters"></select>
        <span asp-validation-for="HunterId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Dog</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
