@model StalkAndStrikeApp.Models.Hunter

<h2>Create Hunter</h2>

<form asp-action="CreateHunter" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LicenseNumber"></label>
        <input asp-for="LicenseNumber" class="form-control" />
        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SquadId"></label>
        <select asp-for="SquadId" class="form-control" asp-items="ViewBag.Squads"></select>
        <span asp-validation-for="SquadId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Hunter</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
