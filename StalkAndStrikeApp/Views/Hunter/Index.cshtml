@model StalkAndStrikeApp.Models.HunterManagementViewModel

<h2>Hunter Management</h2>

<!-- Add Squad Section -->
<h3>Squads</h3>
<a asp-action="CreateSquad" class="btn btn-success mb-3">Add Squad</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var squad in Model.Squads)
        {
            <tr>
                <td>@squad.Name</td>
                <td>
                <td>
                    <a asp-controller="Squad" asp-action="Edit" asp-route-id="@squad.Id" class="btn btn-danger btn-sm">Edit</a>
                    <a asp-controller="Squad" asp-action="Delete" asp-route-id="@squad.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>

                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Hunter Section -->
<h3>Hunters</h3>
<a asp-action="CreateHunter" class="btn btn-success mb-3">Add Hunter</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>License Number</th>
            <th>Squad</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hunter in Model.Hunters)
        {
            <tr>
                <td>@hunter.Name</td>
                <td>@hunter.LicenseNumber</td>
                <td>@hunter.Squad?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@hunter.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@hunter.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

