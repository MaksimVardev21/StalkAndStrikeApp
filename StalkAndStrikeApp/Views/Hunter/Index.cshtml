@model StalkAndStrikeApp.Models.HunterManagementViewModel

<h2>Hunter Management</h2>

<!-- Add Squad Section -->
<h3>Squads</h3>
<a asp-action="CreateSquad" class="btn btn-success mb-3">Add Squad</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var squad in Model.Squads)
        {
            <tr>
                <td>@squad.Name</td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Hunter Section -->
<h3>Hunters</h3>
<a asp-action="CreateHunter" class="btn btn-success mb-3">Add Hunter</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>License Number</th>
            <th>Squad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hunter in Model.Hunters)
        {
            <tr>
                <td>@hunter.Name</td>
                <td>@hunter.LicenseNumber</td>
                <td>@hunter.Squad?.Name</td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Dog Section -->
<h3>Dogs</h3>
<a asp-action="CreateDog" class="btn btn-success mb-3">Add Dog</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Hunter</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dog in Model.Dogs)
        {
            <tr>
                <td>@dog.Name</td>
                <td>@dog.Hunter?.Name</td>
            </tr>
        }
    </tbody>
</table>