@model StalkAndStrikeApp.Models.HunterManagementViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Manage Hunters, Squads, and Dogs</h2>

<!-- Add buttons to navigate to the add forms for Squad, Hunter, and Dog -->
<div>
    <a href="@Url.Action("CreateSquad", "Hunter")" class="btn btn-primary">Add Squad</a>
    <a href="@Url.Action("CreateHunter", "Hunter")" class="btn btn-primary">Add Hunter</a>
    <a href="@Url.Action("CreateDog", "Hunter")" class="btn btn-primary">Add Dog</a>
</div>

<!-- Display the lists of Squads, Hunters, and Dogs -->
<div>
    <h3>Squads</h3>
    <ul>
        @foreach (var squad in Model.Squads)
        {
            <li>@squad.Name</li>
        }
    </ul>
</div>

<div>
    <h3>Hunters</h3>
    <ul>
        @foreach (var hunter in Model.Hunters)
        {
            <li>
                @hunter.Name
                <br /> Squad: @(hunter.Squad != null ? hunter.Squad.Name : "No squad assigned")
                <br /> Dogs:
                <ul>
                    @foreach (var dog in hunter.Dogs)
                    {
                        <li>@dog.Name</li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>

<div>
    <h3>Dogs</h3>
    <ul>
        @foreach (var dog in Model.Dogs)
        {
            <li>@dog.Name</li>
        }
    </ul>
</div>