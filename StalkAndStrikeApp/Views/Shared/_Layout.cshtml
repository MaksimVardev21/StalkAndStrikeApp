<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StalkAndStrikeApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StalkAndStrikeApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">

                    
                </ul>
            </div>
        </nav>
    </header>


    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">
            <h2>Stalk and Strike</h2>
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/HuntingLocation/Index">Hunting Locations</a></li>
            <li><a href="/Trophy/Index">Trophies</a></li>
            <li><a asp-controller="Hunter" asp-action="Index" class="btn btn-lg btn-primary">Hunter</a></li>
            <li><a asp-controller="Gun" asp-action="Index" class="btn btn-lg btn-primary">Gun</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
        </ul>
    </nav>

    <!-- Main content -->
    <div class="container">
        @RenderBody() <!-- The view content will be injected here -->
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Stalk and Strike Hunting App | All rights reserved</p>
    </footer>

    <!-- Optional JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Optional JS library -->
    <script src="~/js/scripts.js"></script> <!-- Link to your custom JS file -->
    @RenderSection("Scripts", false) <!-- Optional section for page-specific scripts -->

</body>
</html>